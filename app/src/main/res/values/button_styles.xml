<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="shapeAppearance">?attr/shapeAppearanceCornerMedium</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">16dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:buttonStyle">@style/Text.Button</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Button.Primary.Elevated" parent="Widget.Material3.Button">
        <item name="shapeAppearance">?attr/shapeAppearanceCornerMedium</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">28dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">18dp</item>
        <item name="android:buttonStyle">@style/Text.Button</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">@color/md_theme_dark</item>
    </style>

    <style name="Button.Icon.Primary" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="shapeAppearance">?attr/shapeAppearanceCornerMedium</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">16dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:buttonStyle">@style/Text.Button</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="Button.Icon.Primary.Elevated" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="shapeAppearance">?attr/shapeAppearanceCornerMedium</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">16dp</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:buttonStyle">@style/Text.Button</item>
        <item name="iconTint">@color/md_theme_dark</item>
    </style>

    <style name="Button.Icon.Primary.Unelevated" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="shapeAppearance">?attr/shapeAppearanceCornerMedium</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">16dp</item>
        <item name="backgroundTint">@color/md_theme_primary_100</item>
        <item name="android:buttonStyle">@style/Text.Button</item>
        <item name="iconTint">@color/md_theme_dark</item>
    </style>

    <style name="Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="shapeAppearance">?attr/shapeAppearanceCornerMedium</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/dimen_10dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/dimen_10dp</item>
        <item name="android:buttonStyle">@style/Text.Button</item>
        <item name="iconTint">?attr/colorOnBackground</item>
    </style>
</resources>