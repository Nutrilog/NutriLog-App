<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nutritionCardOne"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    app:cardElevation="@dimen/dimen_0dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/cardLayoutOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_card_1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_36dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nutritionTypeTV"
                style="@style/Text.H6.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_nutrition"
                android:textColor="?attr/colorOnPrimary" />

            <TextView
                android:id="@+id/nutritionLevelTV"
                style="@style/Text.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/label_nutrition_level"
                android:textColor="?attr/colorOnPrimary" />

        </LinearLayout>

        <TextView
            android:id="@+id/totalNutritionTV"
            style="@style/Text.ValueNutrition"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dimen_36dp"
            android:gravity="end|center"
            android:text="@string/label_amount_of_nutrition"
            android:textColor="?attr/colorOnPrimary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>