                android:layout_marginEnd="@dimen/dimen_36dp"
                android:gravity="end|center"
                android:text="@string/label_amount_of_nutrition"
                android:textColor="?attr/colorOnPrimary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/nutritionCardFour"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nutritionCardThree">

        <LinearLayout
            android:id="@+id/cardLayoutFour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_card_3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_36dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nutritionTypeTv4"
                    style="@style/Text.H6.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_nutrition"
                    android:textColor="?attr/colorOnPrimary" />

                <TextView
                    android:id="@+id/nutritionLevelTv4"
                    style="@style/Text.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_nutrition_level"
                    android:textColor="?attr/colorOnPrimary" />

            </LinearLayout>

            <TextView
                android:id="@+id/totalNutritionTv4"
                style="@style/Text.H5.Bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
