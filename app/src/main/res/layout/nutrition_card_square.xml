<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nutritionCardOne"
    android:layout_width="match_parent"
    android:minWidth="140dp"
    android:layout_height="140dp"
    app:cardBackgroundColor="@color/md_theme_card_dark"
    android:layout_margin="@dimen/dimen_10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nutritionTypeTV"
            style="@style/Text.Body1"
            android:textAlignment="center"
            android:paddingTop="@dimen/dimen_18dp"
            android:paddingBottom="@dimen/dimen_12dp"
            android:paddingHorizontal="@dimen/dimen_12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_nutrition"
            android:textColor="?attr/colorOnPrimary" />

        <TextView
            android:id="@+id/totalNutritionTV"
            style="@style/Text.ValueNutrition"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_amount_of_nutrition"
            android:textColor="?attr/colorOnPrimary" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>